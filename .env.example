# Copy to .env and fill values before running docker compose

# Postgres
POSTGRES_PASSWORD=change-me

# Flask secret key (use a strong random value)
FLASK_SECRET_KEY=change-me

# Optional: seed initial data (admin@wildsync.local / ChangeMe123!)
DB_SEED=1

# Optional: OpenAI key for chatbot features
OPENAI_API_KEY=

# Optional: Local LLM via Ollama (free, CPU/GPU on your machine)
# Enable to use local model for chatbot replies instead of OpenAI
OLLAMA_ENABLED=1
# Default host inside docker compose network
OLLAMA_HOST=ollama:11434
# Suggested models: mistral (7B, smaller), llama3.1:8b (larger)
OLLAMA_MODEL=mistral
