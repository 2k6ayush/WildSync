# Copy to .env and fill values before running docker compose

# Postgres
# Database (SQLite for local dev)
DATABASE_URL=sqlite:///wildsync.db

# Postgres (commented out)
# POSTGRES_PASSWORD=ChangeMe!123

# Flask secret key (use a strong random value)
FLASK_SECRET_KEY=ThisIsADevSecret_ChangeMe

# Optional: seed initial data (admin@wildsync.local / ChangeMe123!)
# Note: DB_SEED=1 might fail if CLI seed command expects Postgres features, but basic seeding should work.
# We'll leave it 1 to attempt seeding.
DB_SEED=1

# Optional: OpenAI key for chatbot features
OPENAI_API_KEY=

# Local LLM via Ollama
OLLAMA_ENABLED=1
OLLAMA_HOST=localhost:11434
OLLAMA_MODEL=phi3:mini

# Auto-create tables for local dev
DB_AUTOCREATE=1
